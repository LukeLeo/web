
<script type="text/javascript"><!--

$(function() {

  var previous = undefined;
  var selected = $('#exercise_' + <%= @initial_index %>);

  $('[id^=exercise_]').each(function(index) {
     var exercise = $(this);
     exercise.click(function() {
       var instructions = $('#instructions_' + index).val();
       cd.radioEntrySwitch(previous, exercise);
       previous = exercise;
       $('#instructions').val(instructions);
     });
   });

  selected.click();
  selected.scrollIntoView({ direction: 'vertical' });

});

//--></script>

