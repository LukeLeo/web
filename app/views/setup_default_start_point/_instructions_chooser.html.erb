
<script type="text/javascript"><!--

$(function() {

  var previous = undefined;
  var selected = $('#instructions_name_' + <%= @initial_index %>);

  $('[id^=instructions_name_]').each(function(index) {
     var name = $(this);
     name.click(function() {
       var instructions = $('#instructions_' + index).val();
       cd.radioEntrySwitch(previous, name);
       previous = name;
       $('#instructions').val(instructions);
     });
   });

  selected.click();
  selected.scrollIntoView({ direction: 'vertical' });

});

//--></script>

