
<script type="text/javascript"><!--

$(function() {

  var previous = undefined;
  var selected = $('#exercises_name_' + <%= @initial_index %>);

  $('[id^=exercises_name_]').each(function(index) {
     var name = $(this);
     name.click(function() {
       var exercise = $('#exercises_' + index).val();
       cd.radioEntrySwitch(previous, name);
       previous = name;
       $('#exercises').val(exercise);
     });
   });

  selected.click();
  selected.scrollIntoView({ direction: 'vertical' });

});

//--></script>

