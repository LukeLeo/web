
<script type="text/javascript"><!--

$(function() {

  var gotoChooseInstructionsPage = function() {
    var id = "<%= @id %>";
    var url = '/setup/show_instructions/' + id +
      '?language=' + encodeURIComponent(cd.chosenLanguage()) +
      '&test=' + encodeURIComponent(cd.chosenTest());
    window.location = url;
  };

  $('#next').click(function() {
    $.getJSON('/setup/language_pull_needed', cd.chosenLanguageAndTest(), function(dojo) {
        if (dojo.pull_needed) {
          cd.dialog_pullImageThen('/setup/language_pull', gotoChooseInstructionsPage);
        } else {
          gotoChooseInstructionsPage();
        }
    });
  });

});

//--></script>

<button type="button" id="next">next</button>
